{
    "compilerOptions": {
      "module": "commonjs",
      "lib": [ "es2017" ],
      "target": "es6",
      "experimentalDecorators": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "skipLibCheck": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "allowJs": true,
      "mapRoot": "./",
      "rootDir": "./"
    },
    "exclude": [
      "node_modules"
    ]
  }
